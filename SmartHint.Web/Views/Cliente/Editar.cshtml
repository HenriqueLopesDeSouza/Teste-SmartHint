@model SmartHint.Application.ViewModel.EditarClienteViewModel
<div class="row">
    <div class="col-md-10 text-right">
        <h4>
            Editar Cliente - Não implementado
        </h4>
    </div>
</div>

<div class="container mt-4">
    <form asp-action="Criar" method="post" id="Criar">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h5>Cadastro de Cliente</h5>
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label">Nome do Cliente/Razão Social</label>
                    <input asp-for="Nome" class="form-control" data-toggle="tooltip" data-placement="top" title="Nome completo ou Razão Social do Cliente" maxlength="150" autocomplete="off" disabled />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-Mail</label>
                    <input asp-for="Email" class="form-control" data-toggle="tooltip" data-placement="top" title="E-mail do Cliente" maxlength="150" autocomplete="off" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefone" class="form-label">Telefone</label>
                    <input asp-for="Telefone" class="form-control" data-mask="(00) 00000-0000" data-toggle="tooltip" data-placement="top" title="Telefone do Cliente" autocomplete="off" disabled />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DataCadastro" class="form-label">Data de Cadastro</label>
                    <input asp-for="DataCadastro" class="form-control" disabled />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 text-right">
            </div>
            <div class="col-md-4 ml-auto text-right">
                <a class="btn btn-secondary" asp-action="Listar">Voltar</a>
            </div>
        </div>
    </form>
</div>


